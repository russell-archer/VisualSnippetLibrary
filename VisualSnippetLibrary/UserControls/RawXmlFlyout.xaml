<UserControl
    x:Class="VisualSnippetLibrary.UserControls.RawXmlFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"    
    d:DesignHeight="300"
    d:DesignWidth="300">

    <Grid Background="{StaticResource FlyOutBrush}">
        <TextBox x:Name="CodeEditor" Text="{Binding Code, Mode=TwoWay}" Style="{StaticResource CodeSnippetFlyoutSmallStyle}" AcceptsReturn="True" FontFamily="Consolas" IsReadOnly="True" />
    </Grid>
</UserControl>
